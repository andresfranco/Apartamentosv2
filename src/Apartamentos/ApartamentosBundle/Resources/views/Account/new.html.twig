{% extends '::masteradmin.html.twig' %}
{% block javascripts %}
{{ parent() }}
<script type="text/javascript" src="{{ asset('js/jquery.validate.js') }}"></script>
{% include 'ApartamentosApartamentosBundle:Account:validateaccount.html.twig' %}
{% endblock %}

{% block contenido %}
<div class="large-12 columns">
    <div class="large-12 columns">
      <h2 class="titulo">{{'Nueva Cuenta'|trans}}</h2>
      <hr>
    </div> 
    {{ form_start(form) }}
    {% form_theme form 'LoginLoginBundle:Form:form_errors_large_12.html.twig' %}
    
    <div class="large-12 columns">
        <div class="large-6 columns">
         {{ form_label(form.number) }}
        {{ form_widget(form.number)}}
        {{ form_errors(form.number) }}
        </div>    
    </div><br>
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(form.name) }}
        {{ form_widget(form.name)}}
        {{ form_errors(form.name) }}
        </div>
    </div>
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(form.balance) }}
        {{ form_widget(form.balance)}}
        {{ form_errors(form.balance) }}
        </div>
    </div>
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(form.bankid) }}
        {{ form_widget(form.bankid)}}
        {{ form_errors(form.bankid) }}
        </div>
    </div>
    <div class="large-12 columns">
    <div class="large-6 columns">     
    <button type="submit">{{ 'Guardar'|trans}}</button>
    <a href="{{ path('accountgrid') }}" class="button">{{'Cancelar'|trans}}</a>
    </div>
    </div>    
    <div>{{ form_errors(form) }}</div>
</div>   
    
{{ form_end(form) }}
{% endblock contenido %}