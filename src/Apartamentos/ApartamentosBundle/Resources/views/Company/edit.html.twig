{% extends '::masteradmin.html.twig' %}
{% block javascripts %}
{{ parent() }}
<script type="text/javascript" src="{{ asset('js/jquery.validate.js') }}"></script>
{% include 'ApartamentosApartamentosBundle:Globalmethods:validatecustom.html.twig' %}
{% include 'ApartamentosApartamentosBundle:Company:validatecompany.html.twig' %} 
{% endblock %}
{% block contenido %}
<div class="large-12 columns">
    <div class="large-12 columns">
      <h2 class="titulo">{{'Editar Condominio'|trans}}</h2>
      <hr>
    </div> 
    {{ form_start(edit_form) }}
    {% form_theme edit_form 'LoginLoginBundle:Form:form_errors_large_12.html.twig' %}
    
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(edit_form.companycode) }}
        {{ form_widget(edit_form.companycode,{ 'attr': {'class': 'large-6 columns'} })}}
        {{ form_errors(edit_form.companycode)}}
        </div>    
    </div><br>
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(edit_form.name) }}
        {{ form_widget(edit_form.name,{ 'attr': {'class': 'large-6 columns'} })}}
        {{ form_errors(edit_form.name) }}
        </div>
    </div>
     <div class="large-12 columns">
        <div class="large-6 columns">         
        {{ form_label(edit_form.phone) }}
        {{ form_widget(edit_form.phone,{ 'attr': {'class': 'large-6 columns'} })}}
        {{ form_errors(edit_form.phone) }}
        </div>
    </div>
     <div class="large-12 columns">
         <div class="large-6 columns">   
        {{ form_label(edit_form.address) }}
        {{ form_widget(edit_form.address,{ 'attr': {'class': 'large-6 columns'} })}}
        {{ form_errors(edit_form.address) }}
         </div>     
    </div>
    
   <div class="large-12 columns">
       <div class="large-6 columns"> 
        {{ form_label(edit_form.email) }}
        {{ form_widget(edit_form.email,{ 'attr': {'class': 'large-6 columns'} })}}
        {{ form_errors(edit_form.email) }}
       </div>   
    </div>
    <div class="large-12 columns">
        <div class="large-6 columns"> 
        {{ form_label(edit_form.website) }}
        {{ form_widget(edit_form.website,{ 'attr': {'class': 'large-6 columns'} })}}
        {{ form_errors(edit_form.website) }}
        </div>    
    </div>
    <div class="large-12 columns">
         <div class="large-6 columns">  
        {{ form_label(edit_form.constCompanyid) }}
        {{ form_widget(edit_form.constCompanyid)}}
        {{ form_errors(edit_form.constCompanyid) }}
         </div>     
           
    </div>
    
    <div class="large-12 columns">
    <div class="large-6 columns">     
    <button type="submit">{{ 'Update'|trans}}</button>
    <a href="{{ path('companygrid') }}" class="button">{{'Cancelar'|trans}}</a>
    </div>
    </div>    
    <div>{{ form_errors(edit_form) }}</div>
</div>   
    
{{ form_end(edit_form) }}
{% endblock contenido %}