{% extends '::masteradmin.html.twig' %}
{% block javascripts %}
{{ parent() }}
<script type="text/javascript" src="{{ asset('js/jquery.validate.js') }}"></script>
{% include 'ApartamentosApartamentosBundle:Globalmethods:validatecustom.html.twig' %}
{% include 'ApartamentosApartamentosBundle:Company:validatecompany.html.twig' %} 
{% endblock %}
{% block contenido %}
<div class="large-12 columns">
    <div class="large-12 columns">
      <h2 class="titulo">{{'Nuevo Condominio'|trans}}</h2>
      <hr>
    </div> 
    {{ form_start(form) }}
    {% form_theme form 'LoginLoginBundle:Form:form_errors_large_12.html.twig' %}
    
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(form.companycode) }}
        {{ form_widget(form.companycode,{ 'attr': {'class': 'large-6 columns'} })}}
        {{ form_errors(form.companycode)}}
        </div>    
    </div><br>
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(form.name) }}
        {{ form_widget(form.name,{ 'attr': {'class': 'large-6 columns'} })}}
        {{ form_errors(form.name) }}
        </div>
    </div>
     <div class="large-12 columns">
        <div class="large-6 columns">         
        {{ form_label(form.phone) }}
        {{ form_widget(form.phone,{ 'attr': {'class': 'large-6 columns'} })}}
        {{ form_errors(form.phone) }}
        </div>
    </div>
     <div class="large-12 columns">
         <div class="large-6 columns">   
        {{ form_label(form.address) }}
        {{ form_widget(form.address,{ 'attr': {'class': 'large-6 columns'} })}}
        {{ form_errors(form.address) }}
         </div>     
    </div>
    
   <div class="large-12 columns">
       <div class="large-6 columns"> 
        {{ form_label(form.email) }}
        {{ form_widget(form.email,{ 'attr': {'class': 'large-6 columns'} })}}
        {{ form_errors(form.email) }}
       </div>   
    </div>
    <div class="large-12 columns">
        <div class="large-6 columns"> 
        {{ form_label(form.website) }}
        {{ form_widget(form.website,{ 'attr': {'class': 'large-6 columns'} })}}
        {{ form_errors(form.website) }}
        </div>    
    </div>
    <div class="large-12 columns">
         <div class="large-6 columns">  
        {{ form_label(form.constCompanyid) }}
        {{ form_widget(form.constCompanyid)}}
        {{ form_errors(form.constCompanyid) }}
         </div>     
           
    </div>
    
    <div class="large-12 columns">
    <div class="large-6 columns">     
    <button type="submit">{{ 'Guardar'|trans}}</button>
    <a href="{{ path('companygrid') }}" class="button">{{'Cancelar'|trans}}</a>
    </div>
    </div>    
    <div>{{ form_errors(form) }}</div>
</div>   
    
{{ form_end(form) }}
{% endblock contenido %}