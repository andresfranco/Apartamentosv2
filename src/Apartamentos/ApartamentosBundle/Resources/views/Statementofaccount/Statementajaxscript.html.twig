<script type="text/javascript">
   $(document).ready(function()
{  
     loadselect();
   $("#condo").change(function(){
    
    loadselect();
   });
        
});

function loadselect()
{
   
     var data = {
        company_id:$("#condo").val()
     };
    $.ajax({
        type: "POST",
        url: "{{ path('statement_select_tower')}}",
        data:data,
        dataType: 'json',
        success: function(data) {
            var tower_selector = $('#tower');
 
            tower_selector.html('<option value="">{{'Seleccione una torre'|trans}}</option>');
            tower_selector.append(data);
        }       
    });    
    
}
</script> 
