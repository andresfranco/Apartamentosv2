{% extends '::masteradmin.html.twig' %}

{% block contenido %}
    <h2 class="titulo">{{'Detalles del vehículo'|trans}}</h2>
    <hr>
    <table style="border:none;">
        <tr>
        <td> 
          <a href="{{ path('vehiclegrid') }}" class="button radius">
              <img  src="{{ asset('images/car.png') }}"/>
              <span>{{'Vehículos'|trans}}</span>
          </a>   
        </td>
        {% if deleteaction =='S' %}
        <td> 
          <a href="#" data-reveal-id="myNormal" class="button radius">
              <img  src="{{ asset('images/delete32.png') }}"/>
              <span>{{'Eliminar vehículo'|trans}}</span>
          </a>
        </td>
        {% endif %}
        </tr>    
    </table>
    <br>
    <table>
           <tr>
                <td  class="titulocampo">{{'Condominio'|trans}}</td>
                <td>{{entity.residentid.towerid.companyid.name}}</td>
            </tr>
            <tr>
                <td  class="titulocampo">{{'Torre'|trans}}</td>
                <td>{{entity.residentid.towerid.name}}</td>
            </tr>
            <tr>
                <td  class="titulocampo">{{'Apartamento'|trans}}</td>
                <td>{{entity.residentid.apartmentid.number}}</td>
            </tr>
            <tr>
                <td  class="titulocampo">{{'Propietario'|trans}}</td>
                <td>{{entity.residentid.name}}</td>
            </tr>
            <tr>
                <td  class="titulocampo">{{'Tipo'|trans}}</td>
                <td>{{ entity.type}}</td>
            </tr>
            <tr>
                <td  class="titulocampo">{{'Número de Placa'|trans}}</td>
                <td>{{ entity.platenumber}}</td>
            </tr>
            <tr>
                <td  class="titulocampo">{{'Marca'|trans}}</td>
                <td>{{ entity.brandid.brand}}</td>
            </tr>
            <tr>
                <td  class="titulocampo">{{'Color'|trans}}</td>
                <td>{{ entity.colorid.color}}</td>
            </tr>
           
            <tr>
                <td  class="titulocampo">{{'Estacionamiento'|trans}}</td>
                <td>{{ entity.parkingid.number}}</td>
            </tr>
            
    </table>
   <div class="reveal-modal small" id="myNormal" data-reveal >
      &iquest;{{'vehicle.delete.question'|trans}}?
	  <br><br>
	  <table class="dialogo">
	  <tr>
	  <td><a class="radius button" href="{{ path('vehicle_deletemodal', { 'id': entity.id }) }}">{{'Aceptar'|trans}}</a></td>
	  <td><a id ="cancelar" class="radius button" href="#">{{'Cancelar'|trans}}</a></td>
	  </tr>
	  </table>
      <a class="close-reveal-modal"><img src="{{ asset('images/dialog_close.png')}}"/></a>
  </div>
    <script>
     {% block foundation %}
   $("#cancelar").click(function (e) {
    $('#myNormal').foundation('reveal', 'close');
});
{% endblock %} 
    </script>
{% endblock %}
