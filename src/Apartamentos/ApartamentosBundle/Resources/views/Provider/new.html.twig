{% extends '::masteradmin.html.twig' %}
{% block javascripts %}
{{ parent() }}
<script type="text/javascript" src="{{ asset('js/jquery.validate.js') }}"></script>
{% include 'ApartamentosApartamentosBundle:Provider:validateprovider.html.twig' %}
{% include 'ApartamentosApartamentosBundle:Provider:providerajaxscript.html.twig' %}
{% endblock %}
{% block contenido %}
<div class="large-12 columns">
    <div class="large-12 columns">
      <h2 class="titulo">{{'Nuevo Proveedor'|trans}}</h2>
      <hr>
    </div> 
    {{ form_start(form) }}
    {% form_theme form 'LoginLoginBundle:Form:form_errors_large_12.html.twig' %}
    
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(form.companyid) }}
        {{ form_widget(form.companyid)}}
        {{ form_errors(form.companyid) }}
        </div>    
    </div><br>
    <div class="large-12 columns">
        <div class="large-6 columns">
         {{ form_label(form.towerid) }}
        {{ form_widget(form.towerid)}}
        {{ form_errors(form.towerid) }}
        </div>
    </div>
     <div class="large-12 columns">
        <div class="large-6 columns">         
        {{ form_label(form.name) }}
        {{ form_widget(form.name)}}
        {{ form_errors(form.name) }}
        </div>
    </div>
     <div class="large-12 columns">
         <div class="large-6 columns">   
         {{ form_label(form.phone) }}
        {{ form_widget(form.phone) }}
        {{ form_errors(form.phone) }}
         </div>     
    </div>
    
   <div class="large-12 columns">
       <div class="large-6 columns"> 
        {{ form_label(form.email) }}
        {{ form_widget(form.email) }}
        {{ form_errors(form.email) }}
       </div>   
    </div>
    <div class="large-12 columns">
        <div class="large-6 columns"> 
        {{ form_label(form.address) }}
        {{ form_widget(form.address) }}
        {{ form_errors(form.address) }}
        </div>    
    </div>
   
    
    <div class="large-12 columns">
    <div class="large-6 columns">     
    <button type="submit">{{ 'Guardar'|trans}}</button>
    <a href="{{ path('providergrid') }}" class="button">{{'Cancelar'|trans}}</a>
    </div>
    </div>    
    <div>{{ form_errors(form) }}</div>
</div>   
    
{{ form_end(form) }}
{% endblock contenido %}