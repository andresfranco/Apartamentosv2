<script type="text/javascript">
   $(document).ready(function()
{  
     
   $("#apartamentos_apartamentosbundle_provider_companyid").change(function(){
    
       
        var data = {
        company_id:$("#apartamentos_apartamentosbundle_provider_companyid").val()
     };
    $.ajax({
        type: "POST",
        url: "{{ path('provider_select_tower')}}",
        data:data,
        dataType: 'json',
        success: function(data) {
            var tower_selector = $('#apartamentos_apartamentosbundle_provider_towerid');
 
            tower_selector.html('<option value="">Seleccione una Torre</option>');
            tower_selector.append(data);
        }       
    });
});
});
    </script> 
