{% extends '::masteradmin.html.twig' %}

{% block contenido %}
    <h2 class="titulo">{{'Detalles del proveedor'|trans}}</h2>
    <hr>
    <table style="border:none;">
        <tr>
        <td> 
          <a href="{{ path('providergrid') }}" class="button radius">
              <img  src="{{ asset('images/provider.png') }}"/>
              <span>{{'Lista de proveedores'|trans}}</span>
          </a>   
        </td>
        {% if deleteaction =='S' %}
        <td> 
          <a href="#" data-reveal-id="myNormal" class="button radius">
              <img  src="{{ asset('images/delete32.png') }}"/>
              <span>{{'Eliminar proveedor'|trans}}</span>
          </a>
        </td>
        {%endif%}
        </tr>    
    </table>
    <br>
    <table>
           <tr>
                <td  class="titulocampo">{{'Condominio'|trans}}</td>
                <td>{{ entity.companyid.name}}</td>
            </tr> 
            <tr>
                <td  class="titulocampo">{{'nombre'|trans}}</td>
                <td>{{ entity.name}}</td>
            </tr>
            <tr>
                <td  class="titulocampo">{{'teléfono'|trans}}</td>
                <td>{{ entity.phone }}</td>
            </tr>
            <tr>
                <td  class="titulocampo">{{'email'|trans}}</td>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <td  class="titulocampo">{{'dirección'|trans}}</td>
                <td>{{ entity.address }}</td>
            </tr>
            
    </table>
   <div class="reveal-modal small" id="myNormal" data-reveal >
      &iquest;{{'provider.delete.question'|trans}}?
	  <br><br>
	  <table class="dialogo">
	  <tr>
	  <td><a class="radius button" href="{{ path('provider_deletemodal', { 'id': entity.id }) }}">{{'Aceptar'|trans}}</a></td>
	  <td><a id ="cancelar" class="radius button" href="#">{{'Cancelar'|trans}}</a></td>
	  </tr>
	  </table>
      <a class="close-reveal-modal"><img src="{{ asset('images/dialog_close.png')}}"/></a>
  </div>
    <script>
     {% block foundation %}
   $("#cancelar").click(function (e) {
    $('#myNormal').foundation('reveal', 'close');
});
{% endblock %} 
    </script>
{% endblock %}

