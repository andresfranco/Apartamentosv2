{% extends '::masteradmin.html.twig' %}

{% block contenido %}
    <h2 class="titulo">Detalles del Color</h2>
    <hr>
    {% for flashMessage in app.session.flashbag.get('error') %}
    <div class="error">
        <table>
            <tr><td><img  src="{{ asset('images/warning.png') }}"/></td>
                <td>{{ flashMessage|trans }}</td>
            </tr>   
        </table> 
    </div><br>
{% endfor %}
    <table style="border:none;">
        <tr>
        <td> 
          <a href="{{ path('colorgrid') }}" class="button radius">
              <img  src="{{ asset('images/color.png') }}"/>
              <span>{{'Colores'|trans}}</span>
          </a>   
        </td>
        {% if deleteaction =='S' %}
        <td> 
          <a href="#" data-reveal-id="myNormal" class="button radius">
              <img  src="{{ asset('images/delete32.png') }}"/>
              <span>{{'Eliminar color'|trans}}</span>
          </a>
        </td>
        {% endif%}
        </tr>    
    </table>
    <br>
    <table>
            <tr>
                <td  class="titulocampo">{{'Color'|trans}}</td>
                <td>{{ entity.color}}</td>
            </tr>
            
            
    </table>
   <div class="reveal-modal small" id="myNormal" data-reveal >
      &iquest;{{'color.delete.question'|trans}}?
	  <br><br>
	  <table class="dialogo">
	  <tr>
	  <td><a class="radius button" href="{{ path('color_deletemodal', { 'id': entity.id }) }}">{{'Aceptar'|trans}}</a></td>
	  <td><a id ="cancelar" class="radius button" href="#">{{'Cancelar'|trans}}</a></td>
	  </tr>
	  </table>
      <a class="close-reveal-modal"><img src="{{ asset('images/dialog_close.png')}}"/></a>
  </div>
    <script>
     {% block foundation %}
   $("#cancelar").click(function (e) {
    $('#myNormal').foundation('reveal', 'close');
});
{% endblock %} 
    </script>
{% endblock %}