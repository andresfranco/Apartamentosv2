{% extends '::masteradmin.html.twig' %}

{% block contenido %}
    <h2 class="titulo">{{'Detalles del pago'|trans}}</h2>
    <hr>
   <table style="border:none;">
        <tr>

         <td>
            {% if deleteaction =='S' %}
            <a href="#" data-reveal-id="myNormal" class="button radius">
              <img  src="{{ asset('images/delete32.png') }}"/>
              <span>{{'Eliminar Pago'|trans}}</span>
            </a>
            <a href="{{ path('paymentinvoice',{'id':entity.id,'namevoucher': randomchar~'_'~entity.apartmentid.towerid.name~'_'~entity.apartmentid.number}) }}" class="button radius ">
                <img  src="{{ asset('images/printfile32.png') }}"/>
                <span>{{'Imprimir Recibo'|trans}}</span>
            </a>
            {% endif %}
        </td>
        </tr>    
    </table>
    <br>
    <table>
             <tr>
                <td  class="titulocampo">{{'Condominio'|trans}}</td>
                <td>{{ entity.apartmentid.towerid.companyid.name}}</td>
            </tr>
             <tr>
                <td  class="titulocampo">{{'Torre'|trans}}</td>
                <td>{{ entity.apartmentid.towerid.name}}</td>
            </tr>
            <tr>
                <td  class="titulocampo">{{'Apartamento'|trans}}</td>
                <td>{{ entity.apartmentid.number}}</td>
            </tr>
            <tr>
                <td  class="titulocampo">{{'Depositante'|trans}}</td>
                <td>{{ entity.depositor}}</td>
            </tr>
            <tr>
                <td  class="titulocampo">{{'Descripci√≥n'|trans}}</td>
                <td>{{ entity.description}}</td>
            </tr>
             <tr>
                <td  class="titulocampo">{{'Tipo de Pago'|trans}}</td>
                <td>{{ entity.paymentmethod|trans}}</td>
            </tr>
            <tr>
                <td  class="titulocampo">{{'Cuenta'|trans}}</td>
                <td>{{ entity.accountid.number ~' - '~entity.accountid.name}}</td>
            </tr>
            <tr>
                <td  class="titulocampo">{{'Monto'|trans}}</td>
                <td>${{ entity.amount}}</td>
            </tr>
            <tr>
                <td  class="titulocampo">{{'Fecha del ingreso'|trans}}</td>
                <td>{{ entity.paymentdate|date('d/m/Y')}}</td>
            </tr>
            <tr>
                <td  class="titulocampo">{{'Numero de Recibo'|trans}}</td>
                <td>{{invoicenumber}}</td>
            </tr>
            
    </table>
   <div class="reveal-modal small" id="myNormal" data-reveal >
      &iquest;{{'payment.delete.question'|trans}}?
	  <br><br>
	  <table class="dialogo">
	  <tr>
	  <td><a class="radius button" href="{{ path('payment_deletemodal', { 'id': entity.id }) }}">{{'Aceptar'|trans}}</a></td>
	  <td><a id ="cancelar" class="radius button" href="#">{{'Cancelar'|trans}}</a></td>
	  </tr>
	  </table>
      <a class="close-reveal-modal"><img src="{{ asset('images/dialog_close.png')}}"/></a>
  </div>
  <a href="{{ path('paymentgrid') }}" class="button radius">
              <img  src="{{ asset('images/back24.png') }}"/>
              <span>{{'Pagos'|trans}}</span>
          </a> 
    <script>
     {% block foundation %}
   $("#cancelar").click(function (e) {
    $('#myNormal').foundation('reveal', 'close');
});
{% endblock %} 
    </script>
{% endblock %}