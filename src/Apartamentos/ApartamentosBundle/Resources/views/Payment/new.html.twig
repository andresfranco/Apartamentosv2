{% extends '::masteradmin.html.twig' %}
{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" type="text/css" href="{{ asset('css/jquery-ui-1.10.4.custom.css') }}" />
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script type="text/javascript" src="{{ asset('js/jquery.validate.js') }}"></script>
<script src="{{ asset('js/jquery-ui.js') }}"></script>
<script type="text/javascript"src="{{ asset('js/datepicker.js') }}"></script>
<script src="{{ asset('js/jquery.maskMoney.js') }}" type="text/javascript"></script>
{% include 'ApartamentosApartamentosBundle:Payment:validatepayment.html.twig' %}   
{% include 'ApartamentosApartamentosBundle:Payment:paymentajaxscript.html.twig' %}   
{% endblock %}

{% block contenido %}
<div class="large-12 columns">
    <div class="large-12 columns">
      <h2 class="titulo">{{'Nuevo Pago'|trans}}</h2>
      <hr>
    </div> 
    {{ form_start(form) }}
    {% form_theme form 'LoginLoginBundle:Form:form_errors_large_12.html.twig' %}
    
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(form.companyid) }}
        {{ form_widget(form.companyid)}}
        {{ form_errors(form.companyid) }}
        </div>    
    </div><br>
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(form.towerid) }}
        {{ form_widget(form.towerid)}}
        {{ form_errors(form.towerid) }}
        </div>
    </div>
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(form.apartmentid) }}
        {{ form_widget(form.apartmentid)}}
        {{ form_errors(form.apartmentid) }}
        </div>    
    </div><br>
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(form.paymentdate) }}
        {{ form_widget(form.paymentdate)}}
        {{ form_errors(form.paymentdate) }}
        </div>
    </div>
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(form.accountid) }}
        {{ form_widget(form.accountid)}}
        {{ form_errors(form.accountid) }}
        </div>    
    </div><br>
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(form.paymentmethod) }}
        {{ form_widget(form.paymentmethod)}}
        {{ form_errors(form.paymentmethod) }}
        </div>
    </div>
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(form.amount) }}
        {{ form_widget(form.amount)}}
        {{ form_errors(form.amount) }}
        </div>    
    </div><br>
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(form.depositor) }}
        {{ form_widget(form.depositor) }}
        {{ form_errors(form.depositor) }}
        </div>
    </div>
     <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(form.description) }}
        {{ form_widget(form.description) }}
        {{ form_errors(form.description) }}
        </div>
    </div>
    
    <div class="large-12 columns">
    <div class="large-6 columns">     
    <button type="submit">{{ 'Guardar'|trans}}</button>
    <a href="{{ path('paymentgrid')}}" class="button">{{'Cancelar'|trans}}</a>
    </div>
    </div>    
    <div>{{ form_errors(form) }}</div>
</div>   
    
{{ form_end(form) }}
{% endblock contenido %}