{% extends '::masteradmin.html.twig' %}

{% block contenido %}
    <h2 class="titulo">{{'Detalles del gasto'|trans}}</h2>
    <hr>
   <table style="border:none;">
        <tr>
        <td> 
          <a href="{{ path('expenseinvoicegrid',{ 'id': entity.id }) }}" class="button radius">
              <img  src="{{ asset('images/documents32.png') }}"/>
              <span>{{'Documentos'|trans}}</span>
          </a>   
        </td>    
        <td> 
          <a href="{{ path('expensegrid') }}" class="button radius">
              <img  src="{{ asset('images/expense.png') }}"/>
              <span>{{'Gastos'|trans}}</span>
          </a>   
        </td>
        {% if deleteaction =='S' %}
        <td> 
          <a href="#" data-reveal-id="myNormal" class="button radius">
              <img  src="{{ asset('images/delete32.png') }}"/>
              <span>{{'Eliminar Gasto'|trans}}</span>
          </a>
        </td>
        {% endif%}
        </tr>    
    </table>
    <br>
    <table>
             <tr>
                <td  class="titulocampo">{{'Condominio'|trans}}</td>
                <td>{{ entity.towerid.companyid.name}}</td>
            </tr>
             <tr>
                <td  class="titulocampo">{{'Torre'|trans}}</td>
                <td>{{ entity.towerid.name}}</td>
            </tr>
            <tr>
                <td  class="titulocampo">{{'Descripci√≥n'|trans}}</td>
                <td>{{ entity.description}}</td>
            </tr>
            <tr>
                <td  class="titulocampo">{{'Causa'|trans}}</td>
                <td>{{ entity.causeid.cause}}</td>
            </tr>
            <tr>
                <td  class="titulocampo">{{'Tipo de Pago'|trans}}</td>
                <td>{{ entity.paymentmethod|trans}}</td>
            </tr>
            <tr>
                <td  class="titulocampo">{{'Monto'|trans}}</td>
                <td>{{ entity.amount}}</td>
            </tr>
            <tr>
                <td  class="titulocampo">{{'Fecha del gasto'|trans}}</td>
                <td>{{ entity.expensedate|date('d/m/Y')}}</td>
            </tr>
            
            
    </table>
   <div class="reveal-modal small" id="myNormal" data-reveal >
      &iquest;{{'expense.delete.question'|trans}}?
	  <br><br>
	  <table class="dialogo">
	  <tr>
	  <td><a class="radius button" href="{{ path('expense_deletemodal', { 'id': entity.id }) }}">{{'Aceptar'|trans}}</a></td>
	  <td><a id ="cancelar" class="radius button" href="#">{{'Cancelar'|trans}}</a></td>
	  </tr>
	  </table>
      <a class="close-reveal-modal"><img src="{{ asset('images/dialog_close.png')}}"/></a>
  </div>
    <script>
     {% block foundation %}
   $("#cancelar").click(function (e) {
    $('#myNormal').foundation('reveal', 'close');
});
{% endblock %} 
    </script>
{% endblock %}