{% extends '::masteradmin.html.twig' %}
{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" type="text/css" href="{{ asset('css/jquery-ui-1.10.4.custom.css') }}" />
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script type="text/javascript" src="{{ asset('js/jquery.validate.js') }}"></script>
<script src="{{ asset('js/jquery-ui.js') }}"></script>
<script type="text/javascript"src="{{ asset('js/datepicker.js') }}"></script>
{% include 'ApartamentosApartamentosBundle:Expense:validateexpense.html.twig' %}
{% include 'ApartamentosApartamentosBundle:Expense:expenseajaxscript.html.twig' %}
{% endblock %}

{% block contenido %}
<div class="large-12 columns">
    <div class="large-12 columns">
      <h2 class="titulo">{{'Editar Gasto'|trans}}</h2>
      <hr>
    </div> 
    {{ form_start(edit_form) }}
    {% form_theme edit_form 'LoginLoginBundle:Form:form_errors_large_12.html.twig' %}
    
    <div class="large-12 columns">
        <div class="large-6 columns">
       {{ form_label(edit_form.companyid) }}
        {{ form_widget(edit_form.companyid) }}
        {{ form_errors(edit_form.companyid) }}
        </div>    
    </div><br>
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(edit_form.towerid) }}
        {{ form_widget(edit_form.towerid) }}
        {{ form_errors(edit_form.towerid) }}
        </div>
    </div>
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(edit_form.providerid) }}
        {{ form_widget(edit_form.providerid) }}
        {{ form_errors(edit_form.providerid) }}
        </div>    
    </div><br>
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(edit_form.expensedate) }}
        {{ form_widget(edit_form.expensedate) }}
        {{ form_errors(edit_form.expensedate) }}
        </div>
    </div>
    <div class="large-12 columns">
        <div class="large-6 columns">
         {{ form_label(edit_form.accountid) }}
        {{ form_widget(edit_form.accountid)}}
        {{ form_errors(edit_form.accountid) }}
        </div>    
    </div><br>
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(edit_form.paymentmethod) }}
        {{ form_widget(edit_form.paymentmethod)}}
        {{ form_errors(edit_form.paymentmethod) }}
        </div>
    </div>
    <div class="large-12 columns">
        <div class="large-6 columns">
       {{ form_label(edit_form.causeid) }}
        {{ form_widget(edit_form.causeid)}}
        {{ form_errors(edit_form.causeid) }}
        </div>    
    </div><br>
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(edit_form.amount) }}
        {{ form_widget(edit_form.amount)}}
        {{ form_errors(edit_form.amount) }}
        </div>
    </div>
     <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(edit_form.description) }}
        {{ form_widget(edit_form.description)}}
        {{ form_errors(edit_form.description) }}
        </div>
    </div>
    <div class="large-12 columns">
    <div class="large-6 columns">     
    <button type="submit">{{ 'Actualizar'|trans}}</button>
    <a href="{{ path('expensegrid')}}" class="button">{{'Cancelar'|trans}}</a>
    </div>
    </div>    
    <div>{{ form_errors(edit_form) }}</div>
</div>   
    
{{ form_end(edit_form) }}
{% endblock contenido %}
