{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Employee list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Completename</th>
                <th>Idnumber</th>
                <th>Salaryamount</th>
                <th>Position</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('employee_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.completename }}</td>
                <td>{{ entity.idnumber }}</td>
                <td>{{ entity.salaryamount }}</td>
                <td>{{ entity.position }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('employee_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('employee_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('employee_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
