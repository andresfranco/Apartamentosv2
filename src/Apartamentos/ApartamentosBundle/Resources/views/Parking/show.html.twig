{% extends '::masteradmin.html.twig' %}

{% block contenido %}
    <h2 class="titulo">{{'Detalles del estacionamiento'|trans}}</h2>
    <hr>
    {% for flashMessage in app.session.flashbag.get('error') %}
    <div class="error">
        <table>
            <tr><td><img  src="{{ asset('images/warning.png') }}"/></td>
                <td>{{ flashMessage|trans }}</td>
            </tr>   
        </table> 
    </div><br>
{% endfor %}

    <table style="border:none;">
        <tr>
        <td> 
          <a href="{{ path('parkinggrid') }}" class="button radius">
              <img  src="{{ asset('images/parking.png') }}"/>
              <span>{{'Estacionamientos'|trans}}</span>
          </a>   
        </td>
        {% if deleteaction =='S' %}
        <td> 
          <a href="#" data-reveal-id="myNormal" class="button radius">
              <img  src="{{ asset('images/delete32.png') }}"/>
              <span>{{'Eliminar estacionamiento'|trans}}</span>
          </a>
        </td>
        {% endif%}
        </tr>    
    </table>
    <br>
    <table>
          <tr>
                <td  class="titulocampo">{{'Condominio'|trans}}</td>
                <td>{{ entity.apartmentid.towerid.companyid.name }}</td>
            </tr>
             <tr>
           <tr>
                <td  class="titulocampo">{{'Torre'|trans}}</td>
                <td>{{ entity.apartmentid.towerid.name }}</td>
            </tr>
             <tr>
                <td  class="titulocampo">{{'Apartamento'|trans}}</td>
                <td>{{ entity.apartmentid.number}}</td>
            </tr>
            <tr>
                <td  class="titulocampo">{{'Número de estacionamiento'|trans}}</td>
                <td>{{ entity.number}}</td>
            </tr>
            <tr>
                <td  class="titulocampo">{{'Localización'|trans}}</td>
                <td>{{ entity.locationid.location}}</td>
            </tr>
            <tr>
                <td  class="titulocampo">{{'Tipo'|trans}}</td>
                <td>{{ entity.type}}</td>
            </tr>
            
            
         
            
    </table>
   <div class="reveal-modal small" id="myNormal" data-reveal >
      &iquest;{{'parking.delete.question'|trans}}?
	  <br><br>
	  <table class="dialogo">
	  <tr>
	  <td><a class="radius button" href="{{ path('parking_deletemodal', { 'id': entity.id }) }}">{{'Aceptar'|trans}}</a></td>
	  <td><a id ="cancelar" class="radius button" href="#">{{'Cancelar'|trans}}</a></td>
	  </tr>
	  </table>
      <a class="close-reveal-modal"><img src="{{ asset('images/dialog_close.png')}}"/></a>
  </div>
    <script>
     {% block foundation %}
   $("#cancelar").click(function (e) {
    $('#myNormal').foundation('reveal', 'close');
});
{% endblock %} 
    </script>
{% endblock %}
