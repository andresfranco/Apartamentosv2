{% extends '::masteradmin.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/jquery-ui-1.10.4.custom.css') }}" />
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/jquery.validate.js') }}"></script>
    <script src="{{ asset('js/jquery-ui.js') }}"></script>
    <script type="text/javascript"src="{{ asset('js/datepicker.js') }}"></script>
    {% include 'ApartamentosApartamentosBundle:Reservation:validatereservation.html.twig' %}
    {% include 'ApartamentosApartamentosBundle:Reservation:reservationajaxscript.html.twig' %}
{% endblock %}
{% block contenido %}
<div class="large-12 columns">
    <div class="large-12 columns">
      <h2 class="titulo">{{'Nueva Reservaci√≥n'|trans}}</h2>
      <hr>
    </div> 
    {{ form_start(form) }}
    {% form_theme form 'LoginLoginBundle:Form:form_errors_large_12.html.twig' %}
    
   
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(form.companyid) }}
        {{ form_widget(form.companyid)}}
        {{ form_errors(form.companyid) }}
        </div>
    </div>
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(form.towerid) }}
        {{ form_widget(form.towerid)}}
        {{ form_errors(form.towerid) }}
         </div>
    </div>
     <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(form.apartmentid) }}
        {{ form_widget(form.apartmentid)}}
        {{ form_errors(form.apartmentid) }}
        </div>
    </div>
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(form.reservename) }}
        {{ form_widget(form.reservename)}}
        {{ form_errors(form.reservename) }}
        </div>
    </div> 
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(form.reason) }}
        {{ form_widget(form.reason)}}
        {{ form_errors(form.reason) }}
        </div>
    </div> 
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(form.reservationdate) }}
        {{ form_widget(form.reservationdate)}}
        {{ form_errors(form.reservationdate) }}
        </div>
    </div> 
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(form.hourfrom) }}
        {{ form_widget(form.hourfrom)}}
        {{ form_errors(form.hourfrom) }}
        </div>
    </div>
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(form.hourto) }}
        {{ form_widget(form.hourto)}}
        {{ form_errors(form.hourto) }}
        </div>
    </div> 
    <div class="large-12 columns">
    <div class="large-6 columns">     
    <button type="submit">{{ 'Guardar'|trans}}</button>
    <a href="{{ path('reservationgrid') }}" class="button">{{'Cancelar'|trans}}</a>
    </div>
    </div>    
    <div>{{ form_errors(form) }}</div>
</div>   
{{ form_end(form) }}
{% endblock contenido %}