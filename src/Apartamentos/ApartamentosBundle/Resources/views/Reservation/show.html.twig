{% extends '::masteradmin.html.twig' %}

{% block contenido %}
    <h2 class="titulo">{{'Detalles de la reservación'|trans}}</h2>
    <hr>
    <table style="border:none;">
        <tr>
            <td>
                <a href="{{ path('reservationgrid') }}" class="button radius">
                    <img  src="{{ asset('images/reservation32.png') }}"/>
                    <span>{{'Reservaciones'|trans}}</span>
                </a>
            </td>
            {% if deleteaction =='S' %}
                <td>
                    <a href="#" data-reveal-id="myNormal" class="button radius">
                        <img  src="{{ asset('images/delete32.png') }}"/>
                        <span>{{'Eliminar reservación'|trans}}</span>
                    </a>
                </td>
            {%endif%}
        </tr>
    </table>
    <br>
    <table>
        <tr>
            <td  class="titulocampo">{{'Condominio'|trans}}</td>
            <td>{{ entity.apartmentid.towerid.companyid.name}}</td>
        </tr>
        <tr>
            <td  class="titulocampo">{{'Torre'|trans}}</td>
            <td>{{ entity.apartmentid.towerid.name}}</td>
        </tr>
        <tr>
            <td  class="titulocampo">{{'Apartamento'|trans}}</td>
            <td>{{  entity.apartmentid.number }}</td>
        </tr>
        <tr>
            <td  class="titulocampo">{{'Nombre de reserva'|trans}}</td>
            <td>{{ entity.reservename }}</td>
        </tr>
        <tr>
            <td  class="titulocampo">{{'Motivo'|trans}}</td>
            <td>{{ reason}}</td>
        </tr>
        <tr>
            <td  class="titulocampo">{{'Fecha de reservación'|trans}}</td>
            <td>{{ entity.reservationdate|date('d/m/Y')}}</td>
        </tr>
        <tr>
            <td  class="titulocampo">{{'Hora desde'|trans}}</td>
            <td>{{ hourfrom}}</td>
        </tr>
        <tr>
            <td  class="titulocampo">{{'Hora hasta'|trans}}</td>
            <td>{{ hourto}}</td>
        </tr>

    </table>
    <div class="reveal-modal small" id="myNormal" data-reveal >
        &iquest;{{'reservation.delete.question'|trans}}?
        <br><br>
        <table class="dialogo">
            <tr>
                <td><a class="radius button" href="{{ path('reservation_deletemodal', { 'id': entity.id }) }}">{{'Aceptar'|trans}}</a></td>
                <td><a id ="cancelar" class="radius button" href="#">{{'Cancelar'|trans}}</a></td>
            </tr>
        </table>
        <a class="close-reveal-modal"><img src="{{ asset('images/dialog_close.png')}}"/></a>
    </div>
    <script>
        {% block foundation %}
        $("#cancelar").click(function (e) {
            $('#myNormal').foundation('reveal', 'close');
        });
        {% endblock %}
    </script>
{% endblock %}
