{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Reservation</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Reservename</th>
                <td>{{ entity.reservename }}</td>
            </tr>
            <tr>
                <th>Reason</th>
                <td>{{ entity.reason }}</td>
            </tr>
            <tr>
                <th>Hourfrom</th>
                <td>{{ entity.hourfrom }}</td>
            </tr>
            <tr>
                <th>Hourto</th>
                <td>{{ entity.hourto }}</td>
            </tr>
            <tr>
                <th>Createdate</th>
                <td>{{ entity.createdate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Modifydate</th>
                <td>{{ entity.modifydate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Createuser</th>
                <td>{{ entity.createuser }}</td>
            </tr>
            <tr>
                <th>Modifyuser</th>
                <td>{{ entity.modifyuser }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('reservation') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('reservation_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
