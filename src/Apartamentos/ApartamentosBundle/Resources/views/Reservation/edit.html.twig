{% extends '::masteradmin.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/jquery-ui-1.10.4.custom.css') }}" />
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/jquery.validate.js') }}"></script>
    <script src="{{ asset('js/jquery-ui.js') }}"></script>
    <script type="text/javascript"src="{{ asset('js/datepicker.js') }}"></script>
    {% include 'ApartamentosApartamentosBundle:Reservation:validatereservation.html.twig' %}
    {% include 'ApartamentosApartamentosBundle:Reservation:reservationajaxscript.html.twig' %}
{% endblock %}
{% block contenido %}
<div class="large-12 columns">
    <div class="large-12 columns">
      <h2 class="titulo">{{'Editar Reservaci√≥n'|trans}}</h2>
      <hr>
    </div> 
    {{ form_start(edit_form) }}
    {% form_theme edit_form 'LoginLoginBundle:Form:form_errors_large_12.html.twig' %}
    
   
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(edit_form.companyid) }}
        {{ form_widget(edit_form.companyid)}}
        {{ form_errors(edit_form.companyid) }}
        </div>
    </div>
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(edit_form.towerid) }}
        {{ form_widget(edit_form.towerid)}}
        {{ form_errors(edit_form.towerid) }}
         </div>
    </div>
     <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(edit_form.apartmentid) }}
        {{ form_widget(edit_form.apartmentid)}}
        {{ form_errors(edit_form.apartmentid) }}
        </div>
    </div>
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(edit_form.reservename) }}
        {{ form_widget(edit_form.reservename)}}
        {{ form_errors(edit_form.reservename) }}
        </div>
    </div> 
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(edit_form.reason) }}
        {{ form_widget(edit_form.reason)}}
        {{ form_errors(edit_form.reason) }}
        </div>
    </div> 
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(edit_form.reservationdate) }}
        {{ form_widget(edit_form.reservationdate)}}
        {{ form_errors(edit_form.reservationdate) }}
        </div>
    </div> 
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(edit_form.hourfrom) }}
