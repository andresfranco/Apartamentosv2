    </div>
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(edit_form.hourto) }}
        {{ form_widget(edit_form.hourto)}}
        {{ form_errors(edit_form.hourto) }}
        </div>
    </div> 
    <div class="large-12 columns">
    <div class="large-6 columns">     
    <button type="submit">{{ 'Actualizar'|trans}}</button>
    <a href="{{ path('reservationgrid') }}" class="button">{{'Cancelar'|trans}}</a>
    </div>
    </div>    
    <div>{{ form_errors(edit_form) }}</div>
</div>   
{{ form_end(edit_form) }}
{% endblock contenido %}
