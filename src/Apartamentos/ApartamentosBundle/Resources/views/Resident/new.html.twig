{% extends '::masteradmin.html.twig' %}
{% block javascripts %}
{{ parent() }}
<script type="text/javascript" src="{{ asset('js/jquery.validate.js') }}"></script>
{% include 'ApartamentosApartamentosBundle:Resident:validateresident.html.twig' %}
{% include 'ApartamentosApartamentosBundle:Resident:residentajaxscript.html.twig' %} 
{% endblock %}
{% block contenido %}
<div class="large-12 columns">
    <div class="large-12 columns">
      <h2 class="titulo">{{'Nuevo Residente'|trans}}</h2>
      <hr>
    </div> 
    {{ form_start(form) }}
    {% form_theme form 'LoginLoginBundle:Form:form_errors_large_12.html.twig' %}
    
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(form.companyid) }}
        {{ form_widget(form.companyid)}}
        {{ form_errors(form.companyid) }}
        </div>    
    </div><br>
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(form.towerid) }}
        {{ form_widget(form.towerid)}}
        {{ form_errors(form.towerid) }}
        </div>
    </div>
     <div class="large-12 columns">
        <div class="large-6 columns">         
       {{ form_label(form.apartmentid) }}
        {{ form_widget(form.apartmentid)}}
        {{ form_errors(form.apartmentid) }}
        </div>
    </div>
     <div class="large-12 columns">
         <div class="large-6 columns">   
        {{ form_label(form.name) }}
        {{ form_widget(form.name)}}
        {{ form_errors(form.name) }}
         </div>     
    </div>
    
   <div class="large-12 columns">
       <div class="large-6 columns"> 
        {{ form_label(form.idnumber) }}
        {{ form_widget(form.idnumber) }}
        {{ form_errors(form.idnumber) }}
       </div>   
    </div>
    <div class="large-12 columns">
        <div class="large-6 columns"> 
        {{ form_label(form.idnumbertype) }}
        {{ form_widget(form.idnumbertype) }}
        {{ form_errors(form.idnumbertype) }}
        </div>    
    </div>
    <div class="large-12 columns">
         <div class="large-6 columns">  
        {{ form_label(form.holder) }}
        {{ form_widget(form.holder) }}
        {{ form_errors(form.holder) }}
         </div>     
           
    </div>
     <div class="large-12 columns">
         <div class="large-6 columns">  
        {{ form_label(form.email) }}
        {{ form_widget(form.email) }}
        {{ form_errors(form.email) }}
         </div>     
           
    </div>
     <div class="large-12 columns">
         <div class="large-6 columns">  
        {{ form_label(form.phone) }}
        {{ form_widget(form.phone) }}
        {{ form_errors(form.phone) }}
         </div>     
           
    </div>
     <div class="large-12 columns">
         <div class="large-6 columns">  
         {{ form_label(form.residenttypeid) }}
        {{ form_widget(form.residenttypeid) }}
        {{ form_errors(form.residenttypeid) }}
         </div>     
           
    </div>
    
    <div class="large-12 columns">
    <div class="large-6 columns">     
    <button type="submit">{{ 'Guardar'|trans}}</button>
    <a href="{{ path('residentsgrid') }}" class="button">{{'Cancelar'|trans}}</a>
    </div>
    </div>    
    <div>{{ form_errors(form) }}</div>
    {{ form_end(form) }}
</div>
{% endblock contenido %}