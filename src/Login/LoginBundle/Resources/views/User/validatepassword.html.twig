<script type="text/javascript">
$(function() {
    $("#form").validate({
        
       rules: {
            "login_loginbundle_user[password][first]":{required:true,minlength: 6},	
            "login_loginbundle_user[password][second]":{required:true,equalTo: "#login_loginbundle_user_password_first"}
        },

        messages: {
            "login_loginbundle_user[password][first]":{required:"{{'password.validate'|trans}}",minlength:"{{'lenghtpassword'|trans}}"},
            "login_loginbundle_user[password][second]":{required:"{{'confirmpassword.validate'|trans}}",equalTo: "{{'confirmpassword.equal'|trans}}"} 
        },
        submitHandler: function(form) {
            form.submit();
        }
    });

  });
</script>
