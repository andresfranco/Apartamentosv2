{% extends '::masteradmin.html.twig' %}
{% block javascripts %}
{{ parent() }}
<script type="text/javascript" src="{{ asset('js/jquery.validate.js') }}"></script>
{% include 'LoginLoginBundle:User:validateuser.html.twig' %}
{% endblock %}
{% block contenido %}
<div class="large-12 columns">
    <div class="large-12 columns">
      <h2 class="titulo">{{'Nuevo Usuario'|trans}}</h2>
      <hr>
    </div> 
    {{ form_start(form) }}
    {% form_theme form 'LoginLoginBundle:Form:form_errors_large_12.html.twig' %}
    
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(form.companyid) }}
        {{ form_widget(form.companyid)}}
        {{ form_errors(form.companyid)}}
        </div>    
    </div>
     <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(form.name) }}
        {{ form_widget(form.name )}}
        {{ form_errors(form.name) }}
        </div>    
    </div>
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(form.email) }}
        {{ form_widget(form.email)}}
        {{ form_errors(form.email) }}
        </div>    
    </div>
     <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(form.username) }}
        {{ form_widget(form.username)}}
        {{ form_errors(form.username) }}
        </div>    
    </div>
     <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(form.password) }}
        {{ form_widget(form.password) }}
        {{ form_errors(form.password) }}
        </div>    
    </div>
    <div class="large-12 columns">
    <div class="large-6 columns">     
    <button type="submit">{{ 'Guardar'|trans}}</button>
    <a href="{{ path('userslist') }}" class="button">{{'Cancelar'|trans}}</a>
    </div>
    </div>    
    <div>{{ form_errors(form) }}</div>
</div>   
{{ form_end(form) }}
{% endblock contenido %}