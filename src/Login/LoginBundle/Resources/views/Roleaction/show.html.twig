{% extends '::masteradmin.html.twig' %}


{% block contenido %}

    <h2 class="titulo">{{'Detalle de la Acción'|trans }}{{' / '}}{{entity.actionid.actionname}}{{' / '}}{{entity.roleid.name }}  

   
    <hr>
    <table style="border:none;">
        <tr>
        <td> 
          <a href="#" data-reveal-id="myNormal" class="button radius">
              <img  src="{{ asset('images/delete32.png') }}"/>
              <span>{{'Quitar Acción'|trans}}</span>
          </a>
        </td>
        </tr>    
    </table>
    <br>
    <table class="record_properties">
       
             <tr>
                <td class="titulocampo">{{'Rol'|trans}}</td>
