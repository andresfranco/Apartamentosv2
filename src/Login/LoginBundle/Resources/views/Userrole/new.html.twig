{% extends '::masteradmin.html.twig' %}
{% block javascripts %}
{{ parent() }}
<script type="text/javascript" src="{{ asset('js/jquery.validate.js') }}"></script>
{% include 'LoginLoginBundle:Userrole:validateuserrole.html.twig' %}
{% endblock %}
{% block contenido %}
<div class="large-12 columns">
    <div class="large-12 columns">
      <h2 class="titulo"><h2 class="titulo">{{ 'Nuevo rol del usuario / '|trans }} 
      {% render url('Usernametwig', {'userid':  app.request.get('userid')}) %}</h2>
      <hr>
    </div> 
    {{ form_start(form) }}
    {% form_theme form 'LoginLoginBundle:Form:form_errors_large_12.html.twig' %}
    
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(form.userid) }}
        {{ form_widget(form.userid)}}
        {{ form_errors(form.userid)}}
        </div>    
    </div>
    <div class="large-12 columns">
        <div class="large-6 columns">
        {{ form_label(form.roleid) }}
        {{ form_widget(form.roleid)}}
        {{ form_errors(form.roleid)}}
        </div>    
    </div>
    <div class="large-12 columns">
    <div class="large-6 columns">     
    <button type="submit">{{ 'Guardar'|trans}}</button>
    <a href="{{ path('userroles',{'userid':app.request.get('userid')}) }}" class="button">{{'Cancelar'|trans}}</a>
    </div>
    </div>    
    <div>{{ form_errors(form) }}</div>
</div>   
{{ form_end(form) }}
{% endblock contenido %}