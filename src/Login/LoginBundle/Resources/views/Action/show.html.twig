{% extends '::masteradmin.html.twig' %}

{% block contenido %}
   <h2 class="titulo">{{'Detalle de la Acción'|trans}}</h2>
   <hr>
   {% for flashMessage in app.session.flashbag.get('error') %}
    <div class="error">
        <table>
            <tr><td><img  src="{{ asset('images/warning.png') }}"/></td>
                <td>{{ flashMessage|trans}}</td>
            </tr>   
        </table> 
    </div><br>
    {% endfor %}
   <table style="border:none;">
        <tr>
        <td> 
          <a href="#" data-reveal-id="myNormal" class="button radius">
              <img  src="{{ asset('images/delete32.png') }}"/>
              <span>{{'Eliminar Acción'|trans}}</span>
          </a>
        </td>
        </tr>    
    </table>
   <table class="record_properties">
            <tr>
                <td class="titulocampo">{{'nombre'|trans}}</td>
                <td>{{ entity.actionname }}</td>
            </tr>
             <tr>
                <td class="titulocampo">{{'Descripción'|trans}}</td>
                <td>{{ entity.description }}</td>
            </tr>
    </table>
      
   <div class="reveal-modal small" id="myNormal" data-reveal >
      &iquest;{{'delete.action.question'|trans}}?
	  <br><br>
	  <table class="dialogo">
	  <tr>
	  <td><a class="radius button" href="{{ path('action_deletemodal', { 'id': entity.id }) }}">{{'Aceptar'|trans}}</a></td>
	  <td><a id ="cancelar" class="radius button" href="#">{{'Cancelar'|trans}}</a></td>
	  </tr>
	  </table>
      <a class="close-reveal-modal"><img src="{{ asset('images/dialog_close.png')}}"/></a>
  </div>
    <script>
     {% block foundation %}
   $("#cancelar").click(function (e) {
    $('#myNormal').foundation('reveal', 'close');
});
{% endblock %} 
    </script>
 <a href="{{ path('actiongrid') }}" class="button radius">
 <img  src="{{ asset('images/back24.png') }}"/>
<span>{{'Acciones'|trans}}</span>
</a> 
{% endblock %}
